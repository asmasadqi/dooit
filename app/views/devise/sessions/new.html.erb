<div class="dooit-login bg-white">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-7 col-lg-6 d-flex flex-column justify-content-center align-items-center">
        <%= link_to activities_path, class: "navbar-brand" do %>
          <%= image_tag "dooit_logo.png"%>
        <% end %>
        <div class="login-form-container">
          <div class="mb-4">
            <h2>Sign In</h2>
            <p>Welcome back! Please enter your details</p>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs mb-4">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <div class="d-flex justify-content-between">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                <!-- devise password recovery link -->
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "dooit-link" %>
                <% end %>
              </div>
            </div>

            <div class="form-actions d-flex flex-column align-items-center">
              <%= f.button :submit, "Log in", class: "btn btn-primary w-100 mb-3" %>
              <!-- devise sign up link -->
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <p>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "dooit-link" %></p>                
              <% end %>
            </div>
          <% end %>

          <!--<%= render "devise/shared/links" %>-->
        </div>
      </div>
      <div class="d-none d-md-flex col-md-5 col-lg-6 login-side-img"></div>
    </div>
  </div>
</div>