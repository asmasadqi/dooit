<!-- Show activity -->
<div class="activity">
  <div class="container-fluid">
    <div class="mt-2 mb-1">
<!-- Title -->
    <h2><%= @activity.title %></h2>
    <h3>Let's Doo it</h3>
    </div>
  </div>
